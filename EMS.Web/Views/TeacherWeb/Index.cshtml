@model List<EMS.Entities.Models.Teacher>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
<div class="text-primary col-md-6">
<h1>Teacher Detail</h1>
</div>

<div class="col-12  text-end">
    <a asp-controller="TeacherWeb" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> &nbsp; Create 
    </a>
    <br /><br />
</div>
<div>
        <table class="table table-striped" >

        <tr>
                <th class="text-primary"> TeacherID</th>
                <th class="text-primary"> Name</th>
                <th class="text-primary">Father Name</th>
                <th class="text-primary">Salary</th>
                <th class="text-primary">Address</th>
                <th class="text-primary">Mobile NO</th>
                <th class="text-primary">Email</th>
                <th class="text-primary">DOB</th>
                <th class="text-primary">Actions</th>
        </tr>
        @foreach (var item in Model)
        {
                <tr >
                    <td>@item.TeacherID</td>
                    <td >@item.Name</td>
                    <td >@item.FatherName</td>
                    <td>@item.Salary</td>
                    <td>@item.Address</td>
                    <td>@item.MobileNo</td>
                    <td>@item.Email</td>
                    <td>@item.DOB</td>
                    <td>
                        <a asp-controller="TeacherWeb" asp-action="Details" asp-route-id="@item.TeacherID" class="btn btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.TeacherID" class="btn btn-primary">Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.TeacherID" method="post" onsubmit="return confirm('Are you sure you want to delete this teacher?');">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>

                    </td>
                
            </tr>
        }
    </table>
</div>
</div>

