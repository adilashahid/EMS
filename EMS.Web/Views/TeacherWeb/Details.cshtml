@model EMS.Entities.Models.Teacher

@{
    ViewData["Title"] = "Teacher Details";
}

<h1>Teacher Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Teacher ID:</dt>
        <dd class="col-sm-10">@Model.TeacherID</dd>

        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Father's Name:</dt>
        <dd class="col-sm-10">@Model.FatherName</dd>

        <dt class="col-sm-2">Address:</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Mobile No:</dt>
        <dd class="col-sm-10">@Model.MobileNo</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Salary:</dt>
        <dd class="col-sm-10">@Model.Salary</dd>

        <dt class="col-sm-2">Date of Birth:</dt>
        <dd class="col-sm-10">@Model.DOB</dd>
    </dl>
</div>

<a asp-controller="TeacherWeb" asp-action="Index" class="btn btn-primary">Back to List</a>
