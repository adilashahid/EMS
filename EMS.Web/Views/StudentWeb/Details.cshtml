@model EMS.Web.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
        /* Add your custom styles here */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        h1 {
            color: #007bff;
            margin-bottom: 30px;
        }

        .row {
            margin-bottom: 20px;
        }

        dt {
            font-weight: bold;
        }

        dd {
            margin-left: 0;
        }

        .back-link {
            display: block;
            margin-top: 20px;
            color: #007bff;
            
        }

        .back-link:hover {
            text-decoration: none;
            color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <div>
            <dl class="row">
                <dt class="col-sm-2">Roll No:</dt>
                <dd class="col-sm-10">@Model.RollNo</dd>

                <dt class="col-sm-2">Name:</dt>
                <dd class="col-sm-10">@Model.Name</dd>

                <dt class="col-sm-2">Father's Name:</dt>
                <dd class="col-sm-10">@Model.FatherName</dd>

                <dt class="col-sm-2">Class Name:</dt>
                <dd class="col-sm-10">@Model.ClassName</dd>

                <dt class="col-sm-2">Address:</dt>
                <dd class="col-sm-10">@Model.Address</dd>

                <dt class="col-sm-2">Mobile No:</dt>
                <dd class="col-sm-10">@Model.MobileNo</dd>

                <dt class="col-sm-2">Email:</dt>
                <dd class="col-sm-10">@Model.Email</dd>

                <dt class="col-sm-2">DOB:</dt>
                <dd class="col-sm-10">@Model.DOB.ToString("MM/dd/yyyy")</dd>

                <dt class="col-sm-2">Fee:</dt>
                <dd class="col-sm-10">@Model.Fee</dd>
            </dl>
        </div>

        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </div>
</body>
</html>
